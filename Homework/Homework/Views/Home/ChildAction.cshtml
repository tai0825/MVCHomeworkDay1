@using Homework.Models;
@model List<AccountingModel>

@{ 
    Layout = null;
}

ChildAction
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <tr>
                    <td>@(i+1)</td>
                    <td>@item.Category</td>
                    <td>@item.Date.ToString("yyyy/MM/dd")</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </table>
    </div>
</div>